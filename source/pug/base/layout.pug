include mixins.pug
include header.pug
include footer.pug
include modal.pug

block data
block variables

doctype html
html(class="page  no-js", lang="ru")

  block head
    head
      title= title
      meta(charset="utf-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      //- Edge и ряд мобильных браузеров слишком умны. Отключим это.
      meta(name="format-detection", content="telephone=no")
      meta(name="format-detection", content="date=no")
      meta(name="format-detection", content="address=no")
      meta(name="format-detection", content="email=no")
      meta(content="notranslate", name="google")
      //- генерируйте favicon тут - https://realfavicongenerator.net/
      //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin='use-credentials'
      link(rel="apple-touch-icon" sizes="180x180" href="favicons/apple-touch-icon.png")
      link(rel="icon" type="image/png" sizes="32x32" href="favicons/favicon-32x32.png")
      link(rel="icon" type="image/png" sizes="16x16" href="favicons/favicon-16x16.png")
      link(rel="manifest" href="site.webmanifest", crossorigin="use-credentials")
      link(rel="mask-icon" href="favicons/safari-pinned-tab.svg" color="#f28f3b")
      meta(name="msapplication-TileColor" content="#eeeeee")
      meta(name="msapplication-config" content="browserconfig.xml")
      meta(name="theme-color" content="#eeeeee")
      //-og
      meta(property="og:title" content="SOLAR")
      meta(property="og:type" content="website")
      meta(property="og:image" content="favicons/safari-pinned-tab.svg")
      meta(property="og:description" content="simple solar system visualization")
      //-
      meta(http-equiv="X-UA-Compatible", content="ie=edge")
      meta(name="description", content= pageDescription)
      link(rel="stylesheet", href="css/style.min.css")

  body
    noscript У вас отключен JavaScript. Это пугает.
    +sprite()
    .page__inner
      .page__content
        +header()
          block nav
        block main

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
