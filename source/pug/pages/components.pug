extends ../base/layout.pug

block data
  include ../data/main-nav.data.pug

block variables
  -
    const title = "Компоненты";
    const pageDescription = "Компоненты используемые в проекте";

block main
  style.
    main > .container {
      padding-top: 30px;
      padding-bottom: 30px;
    }

    .components-backwards {
      display: inline-block;
      margin-bottom: 10px;
      margin-left: 7px;
    }

    .components-backwards span:first-child {
      position: relative;
      top: -3px;

      display: inline-block;
      margin-right: 15px;

      font-size: 16px;
      line-height: 24px;
      vertical-align: top;

      transform: scale(2);
    }

    .components-backwards span:last-child {
      font-size: 16px;
      line-height: 24px;
    }

    .components-backwards + h1 {
      margin-bottom: 0;
    }

    .container > section {
      padding: 20px 0;
    }

    .component-container {
      min-height: 100px;
      padding: 20px;
      background-color: rgba(0, 0, 0, 0.2);
      border: 1px solid grey;
    }

  main
    .container
      a.components-backwards(href="index.html")
        span &larr;
        span вернуться на разводящую
      h1 Компоненты, используемые в вёрстке

      section
        h2 main-nav + toggler

        p Класс компонента: <span style="color: blue;">.main-nav</span> \ модификаторы: <span style="color: blue;">--expanded</span>
        p(style="color: tomato;") Вставляется в блоке <b>nav</b> pug файла, принимает в себя объект из pug/data
        .component-container
          +main-nav(mainNav)
