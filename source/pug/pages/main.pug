extends ../base/layout.pug

block data
  include ../data/main-nav.data.pug
  include ../data/solar.data.pug

block variables
  -
    const title = "SOLAR";
    const currentPage = "main"; //- для остальных страниц пишем либо пустую строку, либо индекс

    const sky = {
      startCount: 2000,
      colors: [0, 60, 240],
    };

block append head
  //- используйте только для шрифта находящегося на первом экране
  link(rel="preload", href="fonts/placeholder.woff2", as="font", crossorigin="anonymous")

block nav
  +main-nav(mainNav)

block main
  main.solar
    +sky(sky)
    .solar__inner
      +sun(sunImage)
      +orbit(mercury)
        +planet(mercury)
      +orbit(venus)
        +planet(venus)
      +orbit(earth)
        +planet(earth)
      +orbit(mars)
        +planet(mars)
      .asteroid-belt.centered
      +orbit(jupiter)
        +planet(jupiter)
      +orbit(saturn)
        +planet(saturn, true)
      +orbit(uranus)
        +planet(uranus, true)
      +orbit(neptune)
        +planet(neptune)

block modals
  +modal("modal--feedback")
    +modal-feedback()
